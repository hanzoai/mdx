{
  "name": "@hanzo/mdx",
  "version": "14.2.2",
  "description": "MDX processing library for Hanzo",
  "keywords": [
    "Hanzo",
    "MDX",
    "Documentation"
  ],
  "homepage": "https://hanzo.ai",
  "repository": "github:hanzoai/mdx",
  "license": "MIT",
  "type": "module",
  "exports": {
    "./loader-mdx": "./loader-mdx.cjs",
    "./loader-meta": "./loader-meta.cjs",
    "./config": {
      "import": "./dist/config/index.js",
      "types": "./dist/config/index.d.ts"
    },
    "./next": {
      "import": "./dist/next/index.js",
      "types": "./dist/next/index.d.ts",
      "require": "./dist/next/index.cjs"
    },
    "./vite": {
      "import": "./dist/vite/index.js",
      "types": "./dist/vite/index.d.ts"
    },
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./components": {
      "import": "./dist/components.js",
      "types": "./dist/components.d.ts"
    },
    "./runtime/*": {
      "import": "./dist/runtime/*.js",
      "types": "./dist/runtime/*.d.ts"
    },
    "./node/loader": {
      "import": "./dist/node/loader.js",
      "types": "./dist/node/loader.d.ts"
    },
    "./bun": {
      "import": "./dist/bun/index.js",
      "types": "./dist/bun/index.d.ts"
    },
    "./plugins/*": {
      "import": "./dist/plugins/*.js",
      "types": "./dist/plugins/*.d.ts"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "hanzo-mdx": "./dist/bin.js"
  },
  "files": [
    "dist/*",
    "loader-mdx.cjs",
    "loader-meta.cjs"
  ],
  "scripts": {
    "build": "tsup",
    "clean": "rimraf dist",
    "dev": "tsup --watch",
    "lint": "eslint .",
    "types:check": "tsc --noEmit",
    "release": "pnpm run build && changeset publish",
    "version": "changeset version && pnpm install --lockfile-only"
  },
  "dependencies": {
    "@mdx-js/mdx": "^3.1.1",
    "@standard-schema/spec": "^1.1.0",
    "chokidar": "^5.0.0",
    "esbuild": "^0.27.2",
    "estree-util-value-to-estree": "^3.5.0",
    "js-yaml": "^4.1.1",
    "mdast-util-to-markdown": "^2.1.2",
    "picocolors": "^1.1.1",
    "picomatch": "^4.0.3",
    "remark-mdx": "^3.1.1",
    "tinyexec": "^1.0.2",
    "tinyglobby": "^0.2.15",
    "unified": "^11.0.5",
    "unist-util-remove-position": "^5.0.0",
    "unist-util-visit": "^5.0.0",
    "vfile": "^6.0.3",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@hanzo/docs-core": "16.2.6",
    "@hanzo/mdx-remote": "^1.4.4",
    "@types/bun": "^1.3.4",
    "@types/js-yaml": "^4.0.9",
    "@types/mdast": "^4.0.4",
    "@types/mdx": "^2.0.13",
    "@types/node": "^24.10.4",
    "@types/picomatch": "^4.0.2",
    "@types/react": "^19.2.7",
    "mdast-util-directive": "^3.1.0",
    "mdast-util-mdx-jsx": "^3.2.0",
    "next": "16.0.10",
    "react": "^19.2.3",
    "remark": "^15.0.1",
    "remark-directive": "^4.0.0",
    "remark-stringify": "^11.0.0",
    "rimraf": "^6.1.2",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "webpack": "^5.104.0"
  },
  "peerDependencies": {
    "@hanzo/ui": "^5.0.0",
    "next": "^15.3.0 || ^16.0.0",
    "react": "*",
    "vite": "6.x.x || 7.x.x"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "next": {
      "optional": true
    },
    "vite": {
      "optional": true
    },
    "@hanzo/ui": {
      "optional": true
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "packageManager": "pnpm@10.12.4"
}
